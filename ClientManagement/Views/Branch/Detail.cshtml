@model ClientManagement.Helpers.ViewModels.BranchVM<Guid>
@{
}
<style>
    .row-class {
        width: 100%;
    }

    .modal-text-style {
        color: #194619;
        font-size: 14px;
        font-family: Montserrat;
    }
</style>

<div class="row row-class">
    <div class="col-lg-4">
        <div class="form-group">
            <div><label asp-for="Name" class="control-label form-label font-weight-bolder"></label></div>
            <div class="modal-text-style">@Model.Name</div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            <div><label asp-for="Tenant" class="control-label form-label font-weight-bolder"></label></div>
            <div class="modal-text-style">@Model.Tenant.Name</div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            <div><label asp-for="Description" class="control-label form-label font-weight-bolder"></label></div>
            <div class="modal-text-style">@Model.Description</div>
        </div>
    </div>
</div>
<input type="hidden" asp-for="BranchId" />
